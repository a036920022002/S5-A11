<div class="container my-5">
  <form action="/" method="POST" class="row g-3 justify-content-center">
    <div class="col-6">
      <input type="url" class="form-control" name="name" placeholder="Input URL here" {{#if shortURL}}
        value="{{originalURL}}" {{/if}} required>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-outline-info">Submit</button>
    </div>
  </form>


  {{#if shortURL}}
  <form class="row g-3 justify-content-center my-3">
    <h2 class="text-center">Shorter URL</h2>
    <div class="col-6">
      <input type="url" class="form-control" name="name" value="{{shortURL}}">
    </div>
    {{!--
    <div class="col-auto">
      <button type="submit" class="btn btn-outline-success">Copy</button>
    </div>
    --}}
  </form>

  {{/if}}
</div>