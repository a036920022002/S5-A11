<div class="container my-5">
  <form class="row g-3 justify-content-center">
    <h2 class="text-center">Origin URL</h2>
    <div class="col-6">
      <input type="url" class="form-control-plaintext" id="originURL" placeholder="Input URL here">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-outline-info">Submit</button>
    </div>
  </form>

  <form class="row g-3 justify-content-center my-3">
    <h2 class="text-center">Shorter URL</h2>
    <div class="col-6">
      <input type="url" class="form-control" id="shortURL">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-outline-success">Copy</button>
    </div>
  </form>

</div>